{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vibe.ai/schema.json",
  "title": "VIBE CLI Configuration",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "provider": {
      "type": "object",
      "description": "Provider-specific configurations",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "baseURL": {
            "type": "string",
            "description": "Custom base URL for the provider"
          },
          "models": {
            "type": "object",
            "description": "Model-specific configurations",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "context": {
                  "type": "integer",
                  "description": "Context window size"
                },
                "output": {
                  "type": "integer",
                  "description": "Max output tokens"
                },
                "capabilities": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["code", "tools", "vision", "reasoning"]
                  }
                },
                "priority": {
                  "type": "integer",
                  "description": "Priority for routing (lower = higher priority)"
                },
                "cost": {
                  "type": "string",
                  "enum": ["low", "medium", "high"]
                },
                "speed": {
                  "type": "string",
                  "enum": ["slow", "medium", "fast"]
                },
                "local": {
                  "type": "boolean",
                  "description": "Whether this is a local model"
                }
              }
            }
          }
        }
      }
    },
    "model": {
      "type": "string",
      "description": "Default model in format provider/model-id"
    },
    "routing": {
      "type": "object",
      "description": "Task-based routing rules",
      "properties": {
        "code": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Models for code generation tasks"
        },
        "chat": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Models for general chat"
        },
        "cheap": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Cost-effective models"
        },
        "reasoning": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Models with reasoning capabilities"
        },
        "vision": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Models with vision capabilities"
        }
      }
    }
  },
  "required": ["model"]
}
