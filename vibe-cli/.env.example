# =============================================================================
# VIBE CLI v12 - Environment Configuration Template
# =============================================================================
#
# Copy this file to .env and fill in your API keys.
# NEVER commit .env to version control!
# Add .env to .gitignore
#
# =============================================================================

# =============================================================================
# CORE LLM PROVIDERS (Choose 1+)
# =============================================================================

# OpenAI - GPT-4o, o1 models
# Get key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...


# Anthropic - Claude Sonnet 4, Opus 4, Haiku 3
# Get key: https://console.anthropic.com/api-keys
ANTHROPIC_API_KEY=sk-ant-api03-...

# Google - Gemini 1.5/2.0 models
# Get key: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=AIzaSy...

# xAI - Grok models
# Get key: https://console.x.ai/
XAI_API_KEY=xai-...

# Mistral AI - Mistral, Mixtral models
# Get key: https://console.mistral.ai/api-keys/
MISTRAL_API_KEY=...

# Cohere - Command R+, Command models
# Get key: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=...

# AI21 Labs - Jamba models
# Get key: https://studio.ai21.com/account
AI21_API_KEY=...

# Perplexity - Sonar models
# Get key: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-...

# DeepSeek - DeepSeek Chat/Coder
# Get key: https://platform.deepseek.com/api-keys
DEEPSEEK_API_KEY=...

# Qwen (Alibaba) - Qwen Plus/Turbo/Max
# Get key: https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=...

# =============================================================================
# AGGREGATOR PROVIDERS
# =============================================================================

# Together AI - Llama, Qwen via unified API
# Get key: https://api.together.xyz/settings/api
TOGETHER_API_KEY=...

# Groq - Fast Llama, Mixtral inference
# Get key: https://console.groq.com/keys
GROQ_API_KEY=...

# OpenRouter - Access 100+ models
# Get key: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-...

# Fireworks AI - Llama, Mixture models
# Get key: https://app.fireworks.ai/account/api-keys
FIREWORKS_API_KEY=...

# =============================================================================
# CLOUD PROVIDERS
# =============================================================================

# Azure OpenAI
# Get key: https://portal.azure.com -> Azure AI Studio
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# AWS Bedrock (uses AWS credentials)
# Configure via: aws configure or AWS_ACCESS_KEY_ID/AWS_SECRET_ACCESS_KEY
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# =============================================================================
# LOCAL PROVIDERS
# =============================================================================

# Ollama (local models - no API key needed)
# Install: https://ollama.com
# Run: ollama serve
OLLAMA_BASE_URL=http://localhost:11434/v1

# HuggingFace Inference (free tier available)
# Get token: https://huggingface.co/settings/tokens
HF_TOKEN=hf_...

# =============================================================================
# MCP SERVERS (Model Context Protocol)
# =============================================================================

# Brave Search - Web search capabilities
# Get key: https://search.brave.com/server
BRAVE_SEARCH_API_KEY=...

# GitHub - Repository access, PRs, issues
# Create token: https://github.com/settings/tokens
# Required scopes: repo, read:user
GITHUB_TOKEN=ghp_...

# Tavily - Search and scraping
# Get key: https://tavily.com/
TAVILY_API_KEY=tvly-...

# Context7 - Documentation lookup
# Get key: https://context7.com/
CONTEXT7_API_KEY=ctx7-...

# PostHog - Analytics (optional)
# Get key: https://app.posthog.com/settings/project
POSTHOG_API_KEY=phx_...

# Deepgram - Speech-to-text
# Get key: https://console.deepgram.com/
DEEPGRAM_API_KEY=...

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable debug logging
VIBE_DEBUG=false

# Log level: debug, info, warn, error
VIBE_LOG_LEVEL=info

# Disable telemetry
VIBE_TELEMETRY=false

# =============================================================================
# MEMORY & STORAGE
# =============================================================================

# Custom memory storage path (default: ~/.vibe/memory)
VIBE_MEMORY_PATH=~/.vibe/memory

# Enable cloud sync (future feature)
VIBE_CLOUD_SYNC=false

# =============================================================================
# APPROVALS & SAFETY
# =============================================================================

# Auto-approve low-risk operations
VIBE_AUTO_APPROVE=false

# Require approval for file deletion
VIBE_APPROVE_DELETE=true

# Require approval for network operations
VIBE_APPROVE_NETWORK=true

# =============================================================================
# PROXY & NETWORK
# =============================================================================

# HTTP/HTTPS proxy (if needed)
HTTP_PROXY=
HTTPS_PROXY=

# No-proxy list (comma-separated)
NO_PROXY=localhost,127.0.0.1

# =============================================================================
# TELEMETRY (Optional)
# =============================================================================

# Disable all telemetry
VIBE_TELEMETRY_OPT_OUT=false
