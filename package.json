  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "types": "./dist/cli/index.d.ts",
  "pkg": {
    "assets": [
      "dist/**/*",
      "package.json"
    ],
    "targets": [
      "node20-macos-x64",
      "node20-linux-x64",
      "node20-win-x64"
    ],
    "outputPath": "build"
  }
}