{
  "name": "vibe-ai-teammate",
  "version": "0.0.2",
  "description": "Opinionated AI development tool using an 8-primitives architecture and MCP for context-aware coding assistance.",
  "main": "dist/index.js",
  "bin": {
    "vibe": "bin/vibe.js"
  },
  "vibe": {
    "version": "0.0.2",
    "architecture": "8-primitives",
    "mcp_enabled": true,
    "minimum_node_version": "20.0.0",
    "breaking_changes": {
      "0.0.1": [
        "Single command 'vibe' only - no subcommands exposed to users",
        "Intent-driven natural language - no slash commands",
        "MCP-first context architecture",
        "8 primitives instead of 60+ scattered tools",
        "Simplified LLM providers (5 instead of 75+)"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "build:v0.0.1": "tsc && echo 'âœ… VIBE v0.0.1 Build Complete'",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:ci": "vitest run --reporter=default",
    "test:coverage": "vitest run --coverage",
    "start": "npm run build && node bin/vibe.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "cli",
    "developer-tools",
    "tui",
    "terminal",
    "llm",
    "agent",
    "one-command",
    "mcp",
    "model-context-protocol",
    "intent-driven",
    "natural-language",
    "ai-engineer",
    "code-generation",
    "refactoring",
    "automation",
    "vibe-cli"
  ],
  "author": "KAZI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mk-knight23/AI-VIBE-CLI-TypeScript.git"
  },
  "bugs": {
    "url": "https://github.com/mk-knight23/AI-VIBE-CLI-TypeScript/issues"
  },
  "homepage": "https://github.com/mk-knight23/AI-VIBE-CLI-TypeScript",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.0",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.3",
    "helmet": "^8.1.0",
    "inquirer": "^13.2.0",
    "js-yaml": "^4.1.1",
    "keytar": "^7.9.0",
    "ora": "^9.3.0",
    "p-limit": "^7.3.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "react-router-dom": "^7.12.0",
    "rimraf": "^6.1.2",
    "simple-git": "^3.30.0",
    "uuid": "^10.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
