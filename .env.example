# VIBE CLI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys (Required for AI providers)
# =============================================================================

# Anthropic API Key (Required for Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (Optional, for GPT models)
# Get from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# MiniMax API Key (Optional, for MiniMax models)
# Get from: https://www.minimaxi.com/
MINIMAX_API_KEY=your_minimax_api_key_here

# =============================================================================
# VIBE API Server (Optional)
# =============================================================================

# API key for VIBE REST API authentication
VIBE_API_KEY=your_secure_random_api_key_here

# Allowed CORS origins (comma-separated)
VIBE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Git Integration (Optional)
# =============================================================================

# GitHub Personal Access Token
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# GitLab Personal Access Token
# Get from: https://gitlab.com/-/profile/personal_access_tokens
GITLAB_TOKEN=your_gitlab_token_here

# =============================================================================
# Optional Configuration
# =============================================================================

# Default AI model provider (anthropic, openai, minimax)
VIBE_PROVIDER=anthropic

# Default model tier (fast, balanced, reasoning, max)
VIBE_TIER=balanced

# Disable telemetry (set to 'false' to opt out)
VIBE_TELEMETRY=true

# Enable debug mode (set to 'true' for verbose logging)
DEBUG=false

# =============================================================================
# Development Only (Do not use in production)
# =============================================================================

# Node environment
NODE_ENV=development
